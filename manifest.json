{
  "name": "Yet Another Shoe Bot",
  "version": "0.1.3",
  "manifest_version": 2,
  "description": "This tool assists to automatically add shoes to the shopping cart as soon as the item page has loaded.",
  "background": {
     "scripts": [ "jquery.js", "background.js" ],
     "persistent": false
  },
  "content_scripts": [ {
     "js": [ "jquery.js", "content.js" ],
     "matches": [ "http://www.footlocker.com/*", "https://www.footlocker.com/*" ]
  } ],
  "permissions": [ "*://www.footlocker.com/*" ],
  "browser_action": {
     "default_title": "Yet Another Shoe Bot",
     "default_popup": "menu.html"
  },
  "options_page": "options.html",
  "icons": { "16": "yasb16.png",
             "48": "yasb32.png",
            "128": "yasb64.png" }
}
